  <!-- Red Hot Burn Debuff -->
  <HediffDef>
    <defName>DMC_RedHotBurn</defName>
    <label>red hot burn</label>
    <description>Flesh is seared by infernal energy from red orbs. The burning heat deals continuous damage and reduces movement speed.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1.0, 0.4, 0.2)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>5.0</maxSeverity>
    <initialSeverity>1.0</initialSeverity>
    <tendable>true</tendable>
    <stages>
      <li>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <statOffsets>
          <MoveSpeed>-0.3</MoveSpeed>
        </statOffsets>
      </li>
      <li>
        <minSeverity>2.0</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
        <statOffsets>
          <MoveSpeed>-0.6</MoveSpeed>
        </statOffsets>
      </li>
      <li>
        <minSeverity>4.0</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.40</offset>
          </li>
        </capMods>
        <statOffsets>
          <MoveSpeed>-1.0</MoveSpeed>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.0</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>8</baseTendDurationHours>
        <severityPerDayTended>-3.0</severityPerDayTended>
      </li>
    </comps>
  </HediffDef>

  <!-- Devil Trigger Transformation -->
  <HediffDef>
    <defName>DMC_DevilTrigger</defName>
    <label>devil trigger</label>
    <description>Devil Trigger transformation active. Demonic power flows through the user, providing enhanced combat capabilities, rapid health regeneration, damage reduction, and supernatural resilience. The user's body becomes partially demonic, granting inhuman fighting prowess.</description>
    <hediffClass>DMCAbilities.Hediff_DevilTrigger</hediffClass>
    <defaultLabelColor>(1.0, 0.3, 0.3)</defaultLabelColor>
    <isBad>false</isBad>
    <everCurableByItem>false</everCurableByItem>
    <makesSickThought>false</makesSickThought>
    <lethalSeverity>-1</lethalSeverity>
    <tendable>false</tendable>
    <displayWound>false</displayWound>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <minSeverity>0.01</minSeverity>
        <statOffsets>
          <MeleeHitChance>20</MeleeHitChance>
          <MeleeDodgeChance>25</MeleeDodgeChance>
          <MoveSpeed>2.0</MoveSpeed>
          <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
          <ArmorRating_Heat>0.20</ArmorRating_Heat>
          <PainShockThreshold>0.30</PainShockThreshold>
          <InjuryHealingFactor>3.0</InjuryHealingFactor>
        </statOffsets>
        <statFactors>
          <MeleeDamageFactor>1.5</MeleeDamageFactor>
          <RangedDamageFactor>1.3</RangedDamageFactor>
          <AccuracyShort>1.3</AccuracyShort>
          <AccuracyMedium>1.3</AccuracyMedium>
          <AccuracyLong>1.2</AccuracyLong>
          <IncomingDamageFactor>0.75</IncomingDamageFactor>
          <StaggerDurationFactor>0.5</StaggerDurationFactor>
        </statFactors>
        <becomeVisible>false</becomeVisible>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.20</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

