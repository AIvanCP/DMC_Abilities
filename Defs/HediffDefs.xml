  <!-- Void Slash Debuff Hediff -->
  <HediffDef>
    <defName>DMC_VoidSlashDebuff</defName>
    <label>void slash debuff</label>
    <description>The target has been struck by a void slash, reducing their movement speed and combat effectiveness while causing minor bleeding.</description>
    <hediffClass>DMCAbilities.Hediff_VoidSlashDebuff</hediffClass>
    <defaultLabelColor>(0.5, 0.2, 0.8)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>1.0</initialSeverity>
    <tendable>false</tendable>
    <stages>
      <li>
        <label>void-touched</label>
        <statOffsets>
          <MoveSpeed>-2.0</MoveSpeed>
          <MeleeDodgeChance>-30</MeleeDodgeChance>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

